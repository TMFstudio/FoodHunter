@page
@model FoodHunter.Areas.Identity.Pages.Admin.IndexModel
@{
    Layout = "/Areas/Identity/Pages/Admin/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FoodStore Admin</title>
</head>
<body>
    <div class="dashboard">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="logo">
                <i class="fas fa-utensils" style="color: var(--primary); font-size: 1.5rem;"></i>
                <h1>FoodStore Admin</h1>
            </div>

            <div class="nav-menu">
                <a href="#" class="nav-item active">
                    <i class="fas fa-tachometer-alt"></i>
                    Dashboard
                </a>

                <!-- Products Dropdown -->
                <div class="dropdown">
                    <a href="#" class="nav-item dropdown-toggle">
                        <i class="fas fa-shopping-bag"></i>
                        Products
                    </a>
                    <div class="dropdown-menu">
                        <a asp-area="identity" asp-page="/Admin/Products/Index" class="dropdown-item">All Products</a>
                        <a asp-area="identity" asp-page="/Admin/ProductsType/Index" class="dropdown-item">Product Types</a>
                        <a asp-area="identity" asp-page="/Admin/ProductsCategories/Index" class="dropdown-item">Products Categories</a>
                    </div>
                </div>

                <!-- Categories Dropdown -->
                <div class="dropdown">
                    <a href="#" class="nav-item dropdown-toggle">
                        <i class="fas fa-list-alt"></i>
                        Categories
                    </a>
                    <div class="dropdown-menu">
                        <a asp-area="identity" asp-page="/Admin/Categories/Index" class="dropdown-item">All Categories</a>
                        <a asp-area="identity" asp-page="/Admin/Categories/Create" class="dropdown-item">Create Category</a>
                    </div>
                </div>

                <!-- Orders Dropdown -->
                <div class="dropdown">
                    <a href="#" class="nav-item dropdown-toggle">
                        <i class="fas fa-truck"></i>
                        Orders
                    </a>
                    <div class="dropdown-menu">
                        <a asp-area="identity" asp-page="/Admin/Orders/Index" class="dropdown-item">All Orders</a>
                    </div>
                </div>

                <!-- Users Dropdown -->
                <div class="dropdown">
                    <a href="#" class="nav-item dropdown-toggle">
                        <i class="fas fa-users"></i>
                        Users
                    </a>
                    <div class="dropdown-menu">
                        <a asp-area="identity" asp-page="/Admin/Users/Index" class="dropdown-item">All Users</a>
                    </div>
                </div>

                <a href="#" class="nav-item">
                    <i class="fas fa-chart-line"></i>
                    Analytics
                </a>
                <a href="#" class="nav-item">
                    <i class="fas fa-cog"></i>
                    Settings
                </a>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main">
            <div class="header">
                <h2>Dashboard</h2>
                <div class="user-menu">
                    <i class="fas fa-bell" style="color: var(--gray);"></i>
                    <div class="avatar">AD</div>
                </div>
            </div>

            <!-- Stats Cards -->
            <div class="stats">
                @if (Model.Dashboard.Orders != null)
                {
                    <div class="card stat-card">
                        <h3>Todays Orders</h3>
                        <div class="value">@Model.Dashboard.ToDayOrderCount</div>
                        <div class="change">
                            <i class="fas fa-arrow-up"></i>
                            Active Customers
                        </div>
                    </div>

                    <div class="card stat-card">
                        <h3>Todays Sells</h3>
                        <div class="value">$@Model.Dashboard.ToDayOrderTotal</div>
                        <div class="change">
                            <i class="fas fa-arrow-up"></i>
                            todays sells
                        </div>
                    </div>

                    <div class="card stat-card">
                        <h3>Active Customers</h3>
                        <div class="value">@Model.Dashboard.Customers.Count</div>
                        <div class="change">
                            <i class="fas fa-arrow-up"></i>
                        </div>
                    </div>

                    <div class="card stat-card">
                        <h3>Menu Products</h3>
                        <div class="value">@Model.Dashboard.Products.Count</div>
                        <div class="change">
                            48 orders today
                        </div>
                    </div>
                }



            </div>

            <!-- Recent Orders -->
            <h3 class="section-title">Recent Orders</h3>
            <div class="card">
                <table>
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Customer</th>
                            <th>Items</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model.Dashboard.Orders)
                    {

       
                        <tbody>
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.PickUpName</td>
                                <td>@item.Count</td>
                                <td>$@item.OrderTotal</td>
                                <td><span class="status completed">@item.Status</span></td>
       @*                          <td>
                                    <div class="action-menu">
                                        <button class="action-btn">
                                            <i class="fas fa-ellipsis-v"></i>
                                        </button>
                                        <div class="action-dropdown">
                                            <a href="#">View Details</a>
                                            <a href="#">Edit</a>
                                            <a href="#">Cancel</a>
                                            <a href="#">Print Invoice</a>
                                        </div>
                                    </div>
                                </td> *@


                            </tr>
                        </tbody>
                    }
                </table>
            </div>
        </div>
    </div>

    <script>
        // Toggle dropdown menus
        document.querySelectorAll('.dropdown-toggle').forEach(item => {
            item.addEventListener('click', function (e) {
                e.preventDefault();
                const parent = this.parentElement;
                parent.classList.toggle('active');

                // Close other dropdowns
                document.querySelectorAll('.dropdown').forEach(dropdown => {
                    if (dropdown !== parent) {
                        dropdown.classList.remove('active');
                    }
                });
            });
        });

        // Close dropdowns when clicking outside
        document.addEventListener('click', function (e) {
            if (!e.target.closest('.dropdown')) {
                document.querySelectorAll('.dropdown').forEach(dropdown => {
                    dropdown.classList.remove('active');
                });
            }
        });
    </script>
</body>
</html>