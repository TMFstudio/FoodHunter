@page
@model FoodHunter.Areas.Identity.Pages.Admin.Users.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<br />
<h1>Customers List</h1>
    <br/>

<table class="table table-bordered table-striped" style="width:100%">

    <thead>
        <tr>
            <th>
                User Name
            </th>
            <th>
                User Email 
            </th>    
            <th>
                PhoneNumber
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Customers.Customers)
        {
            <tr>
                @if (item.FirstName != null && item.LastName != null)
                {
                    <td width="40%">
                        @item.FirstName  @item.LastName
                    </td>
                }
                else
                {
                    <td width="40%">
                        @item.UserName
                    </td>
                }
                <td width="10%">
                    @item.Email
                </td>
                <td width="10%">
                    @item.PhoneNumber
                </td>
                <td width="20%">
                    <a asp-page="Role" Asp-route-id="@item.CustomerId" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i> Role Management
                      </a> 
                </td>
            </tr>
        }
    </tbody>
</table>