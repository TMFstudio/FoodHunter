
@using FoodHunter.Model
@model ProductCategoryModel


<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">@(Model.Id != 0 ? "Update" : "Create")Product Item</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ProductId" class="control-label"></label>
            <select asp-for="ProductId" class="form-control" asp-items="Model.Product">
                <option disabled selected> Select Category </option>
            </select>
        </div>  
        <div class="form-group">
            <label asp-for="CategoryId" class="control-label"></label>
            <select asp-for="CategoryId" class="form-control" asp-items="Model.Category">
                <option disabled selected> Select Category </option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px;">Create</button>
    </div>
</form>