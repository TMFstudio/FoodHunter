@page
@model FoodHunter.Admin.Categories.CreateModel
@{
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3"> Create Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"> </div>
        <div class="mb-3">
             @if (!Model.ModelState.IsValid && Model.Category.Name==null)
            {
                <div class="has-danger">
                    <label asp-for="Category.Name" class="form-label mt-4" for="inputInvalid"></label>
                    <input asp-for="Category.Name" type="text" name="Name" class="form-control is-invalid" id="inputInvalid" />
                    <span asp-validation-for="Category.Name" class="text-danger"></span>
                </div>
            }
            else
            {
                <label asp-for="Category.Name"></label>
                <input asp-for="Category.Name" type="text" name="Name" class="form-control" />
            }
        </div>
        <div class="mb-3">
            
            @if (!Model.ModelState.IsValid && Model.Category.Description == null)
            {
                <div class="has-danger">
                    <label asp-for="Category.Description" class="form-label mt-4" for="inputInvalid"></label>
                    <input asp-for="Category.Description" type="text" name="Description" class="form-control is-invalid" id="inputInvalid" />
                    <span asp-validation-for="Category.Description" class="text-danger"></span>
                </div>
            }
            else
            {
                <label asp-for="Category.Description"></label>
                <input asp-for="Category.Description" type="text" name="Description" class="form-control" />
            }
           
        </div>
        <div class="mb-3">
            @if (!Model.ModelState.IsValid && Model.Category.DisplayOrder == 0)
            {
                <label asp-for="Category.DisplayOrder" class="form-label mt-4" for="inputInvalid"></label>
                <input asp-for="Category.DisplayOrder" type="text" name="DisplayOrder" class="form-control is-invalid" id="inputInvalid" />
                <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
            }
            else
            {
                <label asp-for="Category.DisplayOrder"></label>
                <input asp-for="Category.DisplayOrder" type="text" name="DisplayOrder" class="form-control" />
            }
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px;">Create</button>
    </div>
   
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}