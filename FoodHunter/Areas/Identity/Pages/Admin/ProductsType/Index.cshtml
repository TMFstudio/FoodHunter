@page
@model FoodHunter.Pages.Admin.ProductsType.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Product Name
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProductTypes.ProductTypeModels)
        {
            <tr>
                <td width="10%">
                    @item.Id
                </td>
                <td width="70%">
                    @item.Name

                </td>
                <td width="15%">
                    <a asp-page="Update" Asp-route-id="@item.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <partial name="_DeleteModal" model="item" />

                </td>
            </tr>
        }
    </tbody>
</table>
<div id="indexer">
    <ul class="pagination">
        @if (Model.ProductTypes.HasPreviousPage)
        {
            <li class="page-item">

                <a class="page-link" asp-page="Index" asp-route-pageIndex="@(Model.ProductTypes.CurrentPage - 1)">&laquo;</a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">&laquo;</a>
            </li>
        }
        @for (int i = 1; i <= Model.ProductTypes.TotalPage; i++)
        {
            <li class="page-item @(i == Model.ProductTypes.PageIndex +1 ? "active" : "")">
                <a class="page-link" asp-page="Index" asp-route-pageIndex="@i">@i </a>
            </li>
        }
        @if (Model.ProductTypes.HasNextPage)
        {
            <li class="page-item">

                <a class="page-link" asp-page="Index" asp-route-pageIndex="@(Model.ProductTypes.CurrentPage==0?Model.ProductTypes.CurrentPage +2 :Model.ProductTypes.CurrentPage + 1)">&raquo;</a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">&raquo;</a>
            </li>
        }
    </ul>
</div>