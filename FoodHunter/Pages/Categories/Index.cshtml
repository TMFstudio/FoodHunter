@page
@model FoodHunter.Pages.Categories.IndexModel
@{
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2> Category List</h2>
        </div>
    </div>
    <div class="col-6">
        <a asp-page="create" class="btn btn-primary">
            Add New Category
        </a>
    </div>
</div>
<br /><br />
<table>
    <thead>
    <tr>
        <th>
            Category Name
        </th> 
        <th>
            Display Order
        </th>
    </tr>
    </thead>
<tbody>
    @foreach(var item in Model.categories)
        {
            <tr>
                <th>
                    @item.Name
                </th>
                <th>
                    @item.DisplayOrder
                </th>
            </tr>
        }

</tbody>
</table>