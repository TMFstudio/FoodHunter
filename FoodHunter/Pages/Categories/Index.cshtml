@page
@model FoodHunter.Pages.Categories.IndexModel
@{
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-dark"> Category List</h2>
        </div>
    </div>
    <div class="col-6">
        <a asp-page="create" class="btn btn-primary">
            Add New Category
        </a>
    </div>
</div>
<br /><br />
<table class="table table-bordered table-striped"style="width:100%">

    <thead>
    <tr>
        <th>
            Category Name
        </th> 
        <th>
            Display Order
        </th>
        <th>

        </th>
    </tr>
    </thead>
<tbody>
    @foreach(var item in Model.categories)
        {
            <tr>
                <td width="60%">
                    @item.Name
                </td>
                <td width="25%">
                    @item.DisplayOrder
                </td>      
                <td width="15%">
                    <a asp-page="Update"Asp-route-id="@item.Id" class="btn btn-primary mx-2">
                       <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-page="delete" Asp-route-id="@item.Id" class="btn btn-danger mx-2">
                       <i class="bi bi-trash-fill"></i>
                    </a>
                </td>
            </tr>
        }

</tbody>
</table>