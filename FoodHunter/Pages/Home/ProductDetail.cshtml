@page
@model FoodHunter.Pages.Home.ProductDetailModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Product Detail</title>
</head>
<body>
    <form method="post">
        <input asp-for="ShoppingCartModel.Product.Id" hidden />

        <div class="container py-5">
            <div class="row g-4">
                <!-- Product Image -->
                <div class="col-md-6 text-center">
                    <img src="@Model.ShoppingCartModel.Product.Image" class="img-fluid rounded" alt="Product Image">
                </div>

                <!-- Product Details -->
                <div class="col-md-6">
                    <h2 class="fw-bold">@Model.ShoppingCartModel.Product.Name</h2>
                    <p class="text-muted">@Model.ShoppingCartModel.Product.CreateDate</p>
                    <h4 class="text-success mb-3">@Model.ShoppingCartModel.Product.Price</h4>
                    <div class="col-6">
                        <span class="badge p-2 border text-dark bg-warning"> @Model.ShoppingCartModel.Product.ProductTypeName</span>
                    </div>

                    <div class="text mt-4">
                        @Model.ShoppingCartModel.Product.Description
                    </div>
                    <ul class="list-unstyled">

                        @foreach (var item in Model.ShoppingCartModel.Product.Categories)
                        {
                            <li class="mt-4"><strong>@item.Name:</strong> @item.Description</li>
                        }


                    </ul>
                    <div class="col-12 mt-6">
                        <strong>Total Item: @Model.ShoppingCartModel.ItemsCount</strong>

                        <div class="col-6">
                            <div class="input-group mt-3" style="max-width: 300px;">
                                @if (Model.ShoppingCartModel.ItemsCount == 0)
                                {
                                    <input asp-for="ShoppingCartModel.ItemsCount" hidden value="1" />
                                    <button type="submit" class="btn btn-primary">Add to Cart</button>
                                }
                                else
                                {
                                    <input asp-for="ShoppingCartModel.ItemsCount" class="form-control" placeholder="@Model.ShoppingCartModel.ItemsCount Quantity" />
                                    <button type="submit" class="btn btn-primary">+</button>
                                }

                            </div>
                            <span asp-validation-for="ShoppingCartModel.ItemsCount" class="text-danger"></span>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>






