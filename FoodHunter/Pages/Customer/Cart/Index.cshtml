@page
@model FoodHunter.Pages.Customer.Cart.IndexModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FoodMasters - Shopping Cart</title>
    <link rel="stylesheet" href="~/css/ShoppingCart.css" asp-append-version="true" />

</head>
    <!-- Main Content -->
    <div class="container mb-5">
        <div class="row">
            <div class="col-lg-8">

                <form method="post">

                  <div class="cart-container">
                    <h2 class="cart-title"><i class="fas fa-shopping-cart me-2"></i>Your Order</h2>
                    <!-- Cart Items -->
                    @if (Model.ShoppingCartModel.Products != null)
                    {
                        @foreach (var item in Model.ShoppingCartModel.Products)
                        {
                            <div class="cart-item">
                                <div class="row align-items-center">
                                    <div class="col-md-2">
                                        <img src="@item.Image" class="item-image">
                                    </div>
                                    <div class="col-md-4">
                                        <h5 class="item-name">@item.Name</h5>
                                        <p class="item-desc text-muted mb-0">@item.Description</p>
                                    </div>
                                    <div class="col-md-2">
                                        <p class="item-price">$@item.Price</p>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="d-flex align-items-center">
                                            <button asp-page-handler="minus" asp-route-id="@item.Id" type="submit" class="btn btn-dark">
                                                <i class="bi bi-dash-square"></i> <input hidden value="@item.Id"/>
                                            </button>
                                            <input type="text" class="quantity-input" id="pizza-qty" value="@item.CartItemCount" readonly>
                                            <button asp-page-handler="plus" type="submit" asp-route-id="@item.Id" class="btn btn-danger">
                                                <i class="bi bi-plus-square"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="col-md-1 text-end">
                                        <button type="submit" asp-route-productId="@item.Id" class="btn btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    }

                    else
                    {
                        <!-- Empty Cart Message (Hidden by default) -->
                        <div class="empty-cart d-none" id="empty-cart">
                            <i class="fas fa-shopping-cart"></i>
                            <h3>Your cart is empty</h3>
                            <p>Looks like you haven't added anything to your cart yet</p>
                            <a href="#" class="btn btn-primary">Browse Menu</a>
                        </div>
                    }
                </div>

                </form>

            </div>

            <div class="col-lg-4">
                <div class="cart-container">
                    <h2 class="summary-title">Order Summary</h2>

                    <div class="summary-card">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal (@Model.ShoppingCartModel.ItemCount items)</span>
                            <span id="subtotal">$@Model.ShoppingCartModel.OrderTotal</span>
                        </div>
                        @if (Model.ShoppingCartModel.CartItems != null)
                        {
                            @foreach (var item in Model.ShoppingCartModel.Products)
                            {
                                var totalProductPrice = item.Price * item.CartItemCount;
                                <div class="d-flex justify-content-between mb-2">
                                    <span>@item.Name</span>
                                    <span>$@item.Price * (@item.CartItemCount) = @totalProductPrice</span>
                                </div>
                               
                            }

                            <div class="d-flex justify-content-between mb-2">
                                @{
                                var tax = @Model.ShoppingCartModel.OrderTotal * 0.09;
                                var totalWithTax = @Model.ShoppingCartModel.OrderTotal * 1.09;
                                }
                                <span>Tax</span>
                                <span id="tax">$ @tax</span>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between mb-3">
                                <strong>Total</strong>
                                <strong id="total">$ @totalWithTax</strong>
                            </div>
                        }
                        <div class="mb-3">
                            <label for="promo-code" class="form-label">Promo Code</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="promo-code" placeholder="Enter code">
                                <button class="btn promo-btn">Apply</button>
                            </div>
                        </div>

                        <a asp-page="Summary" class="btn btn-checkout w-100">Proceed to Checkout</a>
                    </div>

                    <div class="mt-3">
                        <p class="text-muted"><i class="fas fa-info-circle me-2"></i>Your order will be delivered in 30-45 minutes</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
