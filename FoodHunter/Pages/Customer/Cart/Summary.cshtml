@page
@model FoodHunter.Pages.Customer.Cart.SummaryModel
@{
}
<link rel="stylesheet" href="~/css/summary.css" asp-append-version="true" />

<form method="post">
    <!-- Delivery/Pickup Options -->
    <div class="order-container mt-4">
        <h2 class="order-title"><i class="fas fa-truck me-2"></i>Delivery Options</h2>

        <div class="row mb-4">
            <div class="col-md-6">
                <div class="delivery-option selected" id="deliveryOption">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="deliveryType" id="delivery" checked>
                        <label class="form-check-label fw-bold" for="delivery">
                            Delivery
                        </label>
                    </div>
                    <p class="text-muted mb-0 mt-2">Get your food delivered to your doorstep</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="delivery-option" id="pickupOption">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="deliveryType" id="pickup">
                        <label class="form-check-label fw-bold" for="pickup">
                            Pickup
                        </label>
                    </div>
                    <p class="text-muted mb-0 mt-2">Pick up your order from our restaurant</p>
                </div>
            </div>
        </div>
        <div class="row mb-4">
            <!-- Pickup/Delivery Time -->
            <div class="col-md-6">
                <div class="col-md-6 mb-3">
                    <label asp-for="OrderModel.PickUpTime" class="form-label">Select Time</label>
                    <input asp-for="OrderModel.PickUpTime" class="form-control" />
                    <span asp-validation-for="OrderModel.PickUpTime" class="text-danger"></span>
                </div>
                <p class="text-muted"><i class="fas fa-info-circle me-2"></i>Your order will be delivered in 30-45 minutes</p>
                <!-- Delivery Address -->
                <div id="deliveryAddress">
                    <h3 class="mb-3">Delivery Address</h3>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="OrderModel.Address" for="addressLine1" class="form-label">Address Line 1</label>
                            <input asp-for="OrderModel.Address" type="text" class="form-control" id="addressLine1" value="123 Main Street">
                        </div>
                    </div>
                </div>

                <!-- Contact Information -->
                <h3 class="mb-3">Contact Information</h3>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="OrderModel.PhoneNumber" class="form-label">Phone Number</label>
                        <input asp-for="OrderModel.PhoneNumber" type="tel" class="form-control" id="phoneNumber" value="+98 (912) 123-4567">
                    </div>
                    <div class="col-md-12 mb-6">
                        <label asp-for="OrderModel.PickUpName" class="form-label">pickup Name</label>
                        <input asp-for="OrderModel.PickUpName" type="text" class="form-control" id="PickUpName" value="Doe">
                    </div>
                </div>
                </br>
                <button type="submit" class="btn btn-dark">
                    delivary
                </button>
            </div>

            <div class="col-md-6">
                <h2 class="summary-title">Order Summary</h2>

                <div class="summary-card">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Subtotal (@Model.ShoppingCartModel.ItemCount items)</span>
                        <span id="subtotal">$@Model.ShoppingCartModel.OrderTotal</span>
                    </div>
                    @if (Model.ShoppingCartModel.CartItems != null)
                    {
                        @foreach (var item in Model.ShoppingCartModel.Products)
                        {
                            var totalProductPrice = item.Price * item.CartItemCount;
                            <div class="d-flex justify-content-between mb-2">
                                <span>@item.Name</span>
                                <span>@item.Price * (@item.CartItemCount) = $@totalProductPrice</span>
                            </div>

                        }

                        <div class="d-flex justify-content-between mb-2">
                            @{
                                var tax = @Model.ShoppingCartModel.OrderTotal * 0.09;
                                var totalWithTax = @Model.ShoppingCartModel.OrderTotal * 1.09;
                            }
                            <span>Tax</span>
                            <span id="tax">$ @tax</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <strong>Total</strong>
                            <strong id="total">$ @totalWithTax</strong>
                        </div>
                    }
                </div>
            </div>
            </div>


        </div>
    </div>

</form>