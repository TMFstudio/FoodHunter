@page
@model FoodHunter.Admin.Categories.IndexModel
@{
}
<div class="container p-3">
    <div class="col-6">
        <a asp-page="create" class="btn btn-primary">
            Create New
        </a>
    </div>
</div>
<br />
<br />
<table class="table table-bordered table-striped" style="width:100%">

    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Categories.categoryModels)
        {
            <tr>
                <td width="40%">
                    @item.Name
                </td>
                <td width="10%">
                    @item.DisplayOrder
                </td>
                <td width="20%">
                    <a asp-page="Update" Asp-route-id="@item.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <partial name="_DeleteModal" model="item" />

                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <ul class="pagination">
        @if (Model.Categories.HasPreviousPage)
        {
            <li class="page-item">

                <a class="page-link" asp-page="Index" asp-route-pageIndex="@(Model.Categories.CurrentPage - 1)">&laquo;</a>
            </li>

        }
        else
        {           
            <li class="page-item disabled">
                <a class="page-link" href="#">&laquo;</a>
            </li>

            
        }
        @for (int i = 1; i <= Model.Categories.TotalPage; i++)
        {
            <li class="page-item @(i == Model.Categories.PageIndex +1 ? "active" : "")">
                <a class="page-link" asp-page="Index" asp-route-pageIndex="@i">@i </a>
            </li>
        }
        @if (Model.Categories.HasNextPage)
        {
            <li class="page-item">

                <a class="page-link" asp-page="Index" asp-route-pageIndex="@(Model.Categories.CurrentPage==0?Model.Categories.CurrentPage +2 :Model.Categories.CurrentPage + 1)">&raquo;</a>
            </li>

        }
        else
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">&raquo;</a>
            </li>
        }

    </ul>
</div>