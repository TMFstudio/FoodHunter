@page
@model FoodHunter.Admin.Categories.IndexModel
@{
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-dark"> Category List</h2>
        </div>
    </div>
    <div class="col-6">
        <a asp-page="create" class="btn btn-primary">
            Create New
        </a>
    </div>
</div>
<br />
<br />
<table class="table table-bordered table-striped" style="width:100%">

    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Categories.categoryModels)
        {
            <tr>
                <td width="40%" >
                    @item.Name
                </td>
                <td width="10%">
                    @item.DisplayOrder
                </td>
                <td width="20%">
                    <a asp-page="Update" Asp-route-id="@item.Id" class="btn btn-primary mx-1">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <partial name="_DeleteModal" model="item" />

                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination">
        @if (Model.Categories.PageIndex > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-page="Index" asp-route-pageIndex="@(Model.Categories.PageIndex - 1)">Previous</a>
            </li>
        }

        @for (int i = 1; i <= Model.Categories.TotalPage; i++)
        {
            <li class="page-item @(i == Model.Categories.PageIndex +1 ? "active" : "")">
                <a class="page-link" asp-page="Index" asp-route-pageIndex="@i">@i</a>
            </li>
        }

        @if (Model.Categories.PageIndex < Model.Categories.TotalPage)
        {
            <li class="page-item">
                <a class="page-link" asp-page="Index" asp-route-pageIndex="@(Model.Categories.PageIndex + 1)">Next</a>
            </li>
        }
    </ul>
</nav>
